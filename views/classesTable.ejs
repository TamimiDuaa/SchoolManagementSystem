                },
                // Optional: If you need to send a body, you can include it here
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload(); // Reload the page after successful deletion
                } else {
                    alert('Failed to delete the teacher');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
    }

